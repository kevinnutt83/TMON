name: Validate Staging WP (nightly)

on:
  schedule:
    - cron: '0 3 * * *' # daily at 03:00 UTC
  workflow_dispatch:

jobs:
  validate-staging:
    if: ${{ secrets.STAGING_WP_URL != '' }}
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'
      - name: Install requests
        run: pip install requests
      - name: Run WP endpoint validator against staging
        env:
          STAGING_WP_URL: ${{ secrets.STAGING_WP_URL }}
          STAGING_WP_UNIT: ${{ secrets.STAGING_WP_UNIT }}
          STAGING_WP_AUTH: ${{ secrets.STAGING_WP_AUTH }}
        run: |
          python scripts/validate_wp_endpoints.py "$STAGING_WP_URL" --unit "$STAGING_WP_UNIT" --auth "$STAGING_WP_AUTH" --retries 2 --timeout 8 || (echo "WP validation failed" && exit 2)
