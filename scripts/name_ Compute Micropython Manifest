name: Compute Micropython Manifest

on:
  workflow_dispatch:

jobs:
  compute-manifest:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'
      - name: Run manifest generator
        env:
          OTA_MANIFEST_HMAC_SECRET: ${{ secrets.OTA_MANIFEST_HMAC_SECRET }}
        run: |
          python scripts/generate_manifest.py --commit --sig-secret-env OTA_MANIFEST_HMAC_SECRET
      - name: Push changes
        if: success()
        uses: ad-m/github-push-action@v0.6.0
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
